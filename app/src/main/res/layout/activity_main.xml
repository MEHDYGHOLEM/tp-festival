            android:background="@color/colorPrimary"
            android:onClick="circleFilterTapped">

        </Button>
</LinearLayout>






    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shapesListView"/>
</LinearLayout>