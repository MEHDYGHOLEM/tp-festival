<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/shapeName"
        android:gravity="center_vertical"
        android:text="shape name"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"/>


    <ImageView
        android:id="@+id/shapeImage"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="396dp" />

    <TextView
        android:id="@+id/TextDetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/shapeImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-134dp"
        android:textSize="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textviewJour"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/shapeImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-239dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"


        android:text="TextView" />

    <TextView
        android:id="@+id/textviewScene"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/shapeImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-343dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="TextView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textviewJour"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:text="Jour du festival" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextDetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="7dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Illustration" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textviewScene"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="Type de scÃ¨ne" />

</RelativeLayout>